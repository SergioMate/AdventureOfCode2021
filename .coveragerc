[run]
command_line = -m unittest discover

[html]
directory = reports/coverage/html

[report]
show_missing = True
sort = -miss
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:

ignore_errors = True

fail_under = 80